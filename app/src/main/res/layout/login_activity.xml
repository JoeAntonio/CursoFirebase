<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText_correo"
                android:textSize="@dimen/textSize_normal"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_clave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText_clave"
                android:textSize="@dimen/textSize_normal"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/boton_acceder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_acceder"
            android:layout_marginTop="@dimen/marginTop_lite"
            />

        <Button
            android:id="@+id/boton_registrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_registro"
            android:layout_marginTop="@dimen/marginTop_lite"
            />

    </LinearLayout>

</LinearLayout>